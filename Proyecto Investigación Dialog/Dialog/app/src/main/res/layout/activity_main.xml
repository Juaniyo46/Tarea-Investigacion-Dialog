<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <Button
        android:id="@+id/mostrar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Mostrar dialogo"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/lista1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Mostrar lista"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/lista2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Mostrar lista seleccion multiple"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/lista3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Mostrar lista seleccion única"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/DialogoPers"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Mostrar diálogo personalizado"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/DialogoSimple"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Dialogo simple"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

</LinearLayout>